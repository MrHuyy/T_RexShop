@model IEnumerable<Demo_T_REX.Models.San_Pham>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                
                <div class="row">
                    <div style="color: black" class="col-md-2">Filter by</div> <!-- col.// -->
                    <div class="col-md-10">
                        <ul class="list-inline">
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">  Brands </a>
                                <div class="dropdown-menu p-3">
                                    @Html.Action("Nhan_hieu", "Home", new { area = "" })
                                </div> <!-- dropdown-menu.// -->
                            </li>
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">  Size </a>
                                <div style="text-align:center;" class="dropdown-menu p-3">
                                    @Html.Action("sizeSSS", "Home", new { area = "" })

                                </div> <!-- dropdown-menu.// -->
                            </li>
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">  Color </a>
                                <div style="text-align:center;" class="dropdown-menu p-3">
                                    @Html.Action("colorss", "Home", new { area = "" })

                                </div> <!-- dropdown-menu.// -->
                            </li>
                            
                            <li class="list-inline-item mr-3">
                                <div class="form-inline">
                                    <label style="color: black;" class="mr-2">Price</label>
                                    @using (Html.BeginForm("searchPrice", "Home", new { area = "" }, FormMethod.Get))
                                    {
                                        <input class="form-control form-control-sm" placeholder="Min" type="number" name="min">
                                        <span class="px-2"> - </span>
                                        <input class="form-control form-control-sm" placeholder="Max" type="number" name="max">
                                        <button type="submit" class="btn btn-sm btn-light ml-2">Ok</button>
                                    }
                                </div>
                            </li>
                            <li class="list-inline-item mr-3">
                                <label class="custom-control mt-1 custom-checkbox">
                                    <input type="checkbox" class="custom-control-input">
                                    <div style="color: black;" class="custom-control-label">
                                        Ready to ship
                                    </div>
                                </label>
                            </li>
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->

        <header class="mb-3">
            <div class="form-inline">
                <strong class="mr-md-auto">@Model.Count() Items found </strong>                         
            </div>
        </header><!-- sect-heading -->

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <div class="img-wrap">
                       
                            <img src="@item.Img">
                        </div>  img-wrap.//
                        <figcaption class="info-wrap">
                            <a href="#" class="title mb-2">@item.TenSP</a>
                            <div class="price-wrap">
                                <span class="price">$@item.Don_Gia_Ban</span>

                            </div> <!-- price-wrap.// -->



                            <p class="text-muted ">Nhãn hiệu: <a style="font-weight:bold; color: black;">@item.Nhan_Hieu.TenLoaiSP</a></p>

                            <hr>

                        

                            <div  style="display: flex;" class="panel-footer clearfix">
                                <div style="background-color: aqua;" >
                                    @Html.ActionLink("Detail", "Detail", "Home", new { id = item.MaSP }, new { @class = "btn btn-default" })
                                </div>
                                <div style="background-color: aquamarine; margin: 0 10px" >

                                    @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = item.MaSP }, new { @class = "btn btn-default" })

                                </div>
                            </div>

                        </figcaption>
                    </figure>
                </div> <!-- col.// -->

            }
        </div> <!-- row end.// -->
     


        <div class="box text-center">
            <p style="color: black">Did you find what you were looking for？</p>
            <a href="" class="btn btn-light">Yes</a>
            <a href="" class="btn btn-light">No</a>
        </div>

    </div> <!-- container .//  -->
</section>
