@model IEnumerable<Demo_T_REX.Models.San_Pham>

<div id="myCarousel2" class="carousel2 slide" data-ride="carousel2" data-interval="0">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel2" data-slide-to="0" class="active"></li>
    </ol>
    <!-- Wrapper for carousel items -->
    <div class="carousel-inner">
        <div class="item2 active">
            <div class="row">

                @foreach (var item in Model)
                {
    <div class="col-sm-3">
        <div class="thumb-wrapper">
            <div class="img-box">
                <img src="@item.Img" class="img-responsive" alt="">
            </div>
            <div class="thumb-content">
                <h4>@item.TenSP</h4>
                <p class="item-price"><strike>$@String.Format("{0:0,0}", item.don_gia_giam)</strike> <span>$@String.Format("{0:0,0}", item.Don_Gia_Ban)</span></p>
                <div class="star-rating">
                    <ul class="list-inline">
                        <li class="list-inline-item"><i class="fa fa-star"></i></li>
                        <li class="list-inline-item"><i class="fa fa-star"></i></li>
                        <li class="list-inline-item"><i class="fa fa-star"></i></li>
                        <li class="list-inline-item"><i class="fa fa-star"></i></li>
                        <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
                    </ul>
                </div>
                <div class="card-body">

                    <a href="@Url.Action("Detail", "Home", new { id = item.MaSP })" class="btn btn-light">  Details </a>
                    <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.MaSP })" class="btn btn-light">  Buy Now </a>
                </div>

            </div>
        </div>
    </div>}
            </div>
        </div>

    </div>


</div>